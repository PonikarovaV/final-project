{
  "compilerOptions": {
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ESNext",
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "noImplicitAny": true,
    "jsx": "react",
    "listEmittedFiles": true,
    "alwaysStrict": true,
    "incremental": false,
    "skipLibCheck": true,
    "checkJs": false,
    "lib": ["DOM", "ESNext"],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
    "baseUrl": "./",
    "noEmit": true,
    "newLine": "LF"
  },
  "exclude": [
    "node_modules",
    "dist/"
  ],
  "include": [
    "src",
    "styles.d.ts"
  ]
}
